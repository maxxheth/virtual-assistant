{
	"name": "obsidian-virtual-assistant",
	"version": "1.0.0",
	"description": "AI-powered virtual assistant for Obsidian with Gemini integration, task management, canvas generation, and MCP server",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"lint": "eslint src/",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"gemini",
		"ai",
		"assistant",
		"mcp"
	],
	"author": "Maxx",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^20.10.0",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"builtin-modules": "^3.3.0",
		"esbuild": "^0.25.0",
		"eslint": "^8.56.0",
		"obsidian": "latest",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@google/generative-ai": "^0.24.0"
	}
}